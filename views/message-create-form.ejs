<%- include("./header") %> 

<div class="col-sm-10"></div>
    <h1><%= title %></h1>

    <form action="" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input class=form-control name="title" placeholder="Title" 
                type="text" value='<%= locals.message === undefined ? '' : locals.message.title %>'>
        </div>

        <div class='form-group'>
            <label for='message'>Message</label>
            <textarea id='message' class='form-control' type='textarea' placeholder='Summary' 
                name='message' rows='3' required='true'>
                <%= locals.message === undefined ? '' : locals.message.message %>
            </textarea>
        </div>
        
        <button class='btn btn-primary' type='submit'>Post</button>
    </form>

    <% if (locals.errors) { %> 
        <ul>
            <% for( let i = 0; i < errors.length; i++ ) { %>
                <li><%- errors[i].msg %> </li>
            <% } %> 
        </ul>
    <% } %>
</div>

<%- include("./footer") %>